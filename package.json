{
  "name": "game-engine",
  "version": "1.0.0",
  "description": "A powerful game development engine with 3D editing capabilities",
  "author": "Your Name <your.email@example.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node server.js --dev",
    "start": "NODE_ENV=production node server.js",
    "build": "NODE_ENV=production vite build",
    "lint": "oxlint",
    "electron": "NODE_ENV=development electron .",
    "electron:dev": "node electron/dev.js",
    "electron:pack": "npm run build && NODE_ENV=production electron .",
    "electron:dist": "npm run build && electron-builder",
    "electron:dist-mac": "npm run build && electron-builder --mac",
    "electron:dist-win": "npm run build && electron-builder --win",
    "electron:dist-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@fastify/multipart": "^9.0.3",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/react": "^1.1.0",
    "@fastify/vite": "^8.1.2",
    "@fastify/websocket": "^11.2.0",
    "@react-three/drei": "^10.6.0",
    "@react-three/fiber": "^9.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/three": "^0.178.1",
    "@unhead/react": "^2.0.8",
    "chokidar": "^4.0.3",
    "fastify": "^5.2.2",
    "history": "^5.3.0",
    "minipass": "^7.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0",
    "three": "^0.178.0",
    "three-stdlib": "^2.36.0",
    "valtio": "^2.1.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "oxlint": "^0.16.6",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.11",
    "vite": "^6.2.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yourcompany.engine",
    "productName": "Game Engine",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "server.js",
      "server/**/*",
      "client/dist/**/*",
      "projects/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/{README.md,readme.md,CHANGELOG.md,changelog.md}",
      "!node_modules/**/test/**/*",
      "!node_modules/**/__tests__/**/*",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "projects",
        "to": "projects",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
